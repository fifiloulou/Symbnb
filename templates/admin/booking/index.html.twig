{% extends 'admin/base.html.twig' %}

{% block title %}Administrations des réservations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des réservations</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for booking in pagination.data %}
                <tr>
                    <td>{{booking.id}}</td>
                    <td>{{booking.createdAt | date('d/m/Y H:i')}}</td>
                    <td><img src="{{booking.booker.picture}}" alt="" class="avatar avatar-micro"> {{booking.booker.fullName}}</td>
                    <td>{{booking.ad.title}}</td>
                    <td>
                        <a href="#" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="#" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            {% set page = pagination.page %}
            {% set pages = pagination.pages %}
            <ul class="pagination">
                <li class="page-item {% if page == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{  path('admin_booking_index', {'page': page - 1})}}">&laquo;</a>
                </li>
                {% for i in 1..pages %}
                    <li class="page-item {% if page == i %}active{% endif %}">
                        <a class="page-link" href="{{ path('admin_booking_index', {'page': i})}}">{{ i }}</a>
                    </li>
                {% endfor %}
                <li class="page-item {% if page == pages %}disabled{% endif %}">
                <a class="page-link" href="{{  path('admin_booking_index', {'page': page + 1})}}">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
